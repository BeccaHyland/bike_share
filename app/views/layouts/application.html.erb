<!DOCTYPE html>
<html>
  <head>
    <title>BikeShare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% unless current_user %>
      <p><%= link_to "Sign Up", new_user_path %></p>
      <p><%= link_to "Sign In", login_path %></p>
    <% else %>
      <p><%= "Logged in as #{current_user.username}" %>
      <p><%= link_to "Log Out", logout_path, method: :delete %></p>
    <% end %>
    <p><%= link_to "My Cart", cart_path %></p>

    <p class="flash"><%= flash.notice %></p>
    <%= yield %>
  </body>
</html>
