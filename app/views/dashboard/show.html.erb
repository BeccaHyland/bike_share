<h1> Welcome <%= @user.first_name %>! Your username is <%= @user.username %></h1>

<ul>
  <li> Name: <%= @user.name %>
  <li> Address: <%= @user.address %></li>
  <li><%= link_to "Update My Information", edit_user_path(@user) %></li>
</ul>

<% if @user_orders %>
<h3>Order History</h3>
<table>
  <th>Order Id</th>
  <th>Status</th>
  <th>Order Date</th>
  <th>Total</th>
  <% @user_orders.each do |order| %>
    <tr>
      <td class="order-<%= order.id %>"><%= link_to "##{order.id}", order_path(order) %></td>
      <td><%= order.status %></td>
      <td><%= order.created_at.strftime('%m-%d-%Y') %></td>
      <td><%= number_to_currency(order.total) %></td>
    </tr>
  <% end %>
</table>
<% end %>
