<h1>Bike Accessories</h1>

<% @items.each do |item| %>
  <div class=item_<%= item.id %>>
    <ul>
      <li><%= link_to item.title, item_path(item)%></li>
      <li><%= item.description %></li>
      <li><%= number_to_currency(item.price) %></li>
      <li><%= image_tag("#{item.image_url}" , size: "50")%></li>
      <% if current_admin?%>
        <li><%= link_to "Edit", edit_admin_item_path(item)%></li>
        <% if item.retired? %>
          <li><%= button_to "Reactivate retired item", item.change_status(item) %></li>
        <% else %>
        <li><%= button_to "Retire active item", item.change_status(item) %></li>
        <% end %>
      <% else %>
        <% if item.retired? %>
          <li><%= button_to "Unavailable", cart_items_path(item_id: item.id), disabled: true%></li>
        <% else %>
          <li><%= button_to "Add to Cart", cart_items_path(item_id: item.id)%></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
