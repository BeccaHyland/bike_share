<h1>Condition Date: <%= @condition.date %></h1>

<ul>
  <li>Maximum Temperature: <%= @condition.max_temp%></li>
  <li>Mean Temperature: <%= @condition.mean_temp%></li>
  <li>Minimum Temperature: <%= @condition.min_temp%></li>
  <li>Mean Humidity: <%= @condition.mean_humidity%></li>
  <li>Mean Visibility: <%= @condition.mean_visibility%></li>
  <li>Mean Windspeed: <%= @condition.mean_windspeed%></li>
  <li>Precipitation: <%= @condition.precipitation%></li>
  <% if current_admin?  %>
  <li><%= link_to "Edit", edit_admin_condition_path(@condition) %></li>
  <li><%= link_to "Delete", admin_condition_path(@condition), method: "delete" %></li>
  <% end  %>
</ul>
