<h1>Admin Dashboard</h1>

<%= link_to "See All Accessories - Go to Bike Shop", admin_bike_store_path %>

<h4>Total Orders Completed: <%= @sorted_orders["completed"] %></h4>
<h4>Total Orders Ordered: <%= @sorted_orders["ordered"] %></h4>
<h4>Total Orders Paid: <%= @sorted_orders["paid"] %></h4>
<h4>Total Orders Cancelled: <%= @sorted_orders["cancelled"] %></h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Order</th>
      <th scope="col">Status</th>
      <th scope="col">Date</th>
    </tr>
  </thead>

<% @orders.each do |order| %>

<tbody>
  <tr>
    <th scope="row"><%= link_to "Order-#{order.id}", order_path(order) %></th>
    <td id="order-<%= order.id %>"><%= order.status %></td>
    <td><%= order.created_at.strftime("%m-%d-%Y") %></td>
  </tr>
</tbody>
<% end %>
</table>
