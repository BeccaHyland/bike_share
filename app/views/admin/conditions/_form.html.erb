<div class='form'>
  <%= form_for [:admin, @condition] do |f| %>
    <div>
    <%= f.label :date%>
    <%= f.date_field :date %>
    </div>
    <div>
    <%= f.label :max_temp %>
    <%= f.number_field :max_temp %>
    </div>
    <div>
    <%= f.label :mean_temp %>
    <%= f.number_field :mean_temp %>
    </div>
    <div>
    <%= f.label :min_temp %>
    <%= f.number_field :min_temp %>
    </div>
    <div>
    <%= f.label :mean_humidity %>
    <%= f.number_field :mean_humidity, min: '0' %>
    </div>
    <div>
    <%= f.label :mean_visibility %>
    <%= f.number_field :mean_visibility, min: '0' %>
    </div>
    <div>
    <%= f.label :mean_windspeed %>
    <%= f.number_field :mean_windspeed, min: '0' %>
    </div>
    <div>
    <%= f.label :precipitation %>
    <%= f.number_field :precipitation, min: '0' %>
    </div>
    <div>
    <%= f.submit %>
    </div>
  <% end %>
</div>
