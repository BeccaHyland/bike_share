<div class='form'>
  <%= form_for [:admin, @item] do |f| %>
  <div>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
  <div>
  <%= f.label :description %>
  <%= f.text_field :description %>
  </div>
  <div>
  <%= f.label :price %>
  <%= f.number_field :price, min: '0', step: '.01', round: 2%>
  </div>
  <div>
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>
  </div>
  <div>
  <%= f.label :status %>
  <%= f.select :status, options_for_select([["active"],["retired"]]) %>
  </div>
  <div>
  <%= f.submit "Submit"%>
  </div>
<% end %>
